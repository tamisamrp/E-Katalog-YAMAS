<%- include('../partials/header/__header-auth.ejs', { title: 'Login' }) %>
<%- include('../partials/messages/__messages-auth.ejs') %>
    <section class="hero-section">
        <div class="brand-logo">
            <img src="../../images/assets/logo_medayuagung_warna.webp" alt="Logo Perpustakaan Medayu">
        </div>
        <div class="auth-form-light login-box">
            <a href="/" class="close-icon" aria-label="Kembali ke beranda">&times;</a>
            <h2>Login</h2>
            <form action="/log-pustakawan" method="POST">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-vcard"></i></span>
                        <input type="text" class="form-control form-control-lg" id="npInput" placeholder="Nomor Pegawai" name="nomor_pegawai" value="<%= (typeof data != 'undefined' && data.nomor_pegawai) || '' %>">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control form-control-lg" id="passwordInput" placeholder="Kata Sandi" name="kata_sandi" value="<%= (typeof data != 'undefined' && data.kata_sandi) || '' %>">
                        <span class="input-group-text toggle-password"><i class="bi bi-eye-slash"></i></span>
                    </div>
                    <div id="validation-error" class="text-danger mt-2"></div>
                </div>
                <div class="mt-3 text-center">
                    <button type="submit" class="btn auth-form-btn">Login</button>
                </div>
            </form>
        </div>
    </section>
<%- include('../partials/script/__script-auth.ejs') %>
